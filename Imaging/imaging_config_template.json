{
    "name": "Imaging/imaging_config_template.json",

    "camera_config": {
        "exp_time": 10,
        "binning": null,
        "roi": null
    },

    "acquisition_config": {
        "splice_plugins_enable": false,
        "splice_plugin_setting": [
            {"name": "pluginname1", "parameters": [{"name": "module_call_order", "value":  1},
                {"name": "paramname", "value":  1}]},
            {"name": "pluginname2", "parameters": [{"name": "module_call_order", "value":  1},
                {"name": "paramname", "value":  1}]}
                                 ],
        "buffer": {"nframes": 32, "nrows": 256, "ncols": 256},
        "enable_gpu" : 1,
        "vid_save_path": "XXX/YYY.tiff",
        "meta_save_path": "XXX/YYY.txt",
        "num_of_frames": 100
    },

    "feedback_config": {
        "port_id": "XXX"
    },

    "buffer_preprocess_config": {
        "resize": {"order": 1, "kernel_name":"resize",
            "parameters": {"nrows": 512, "ncols": 512}}
    },

    "buffer_postprocess_config": {
        "dff": {"order": 2, "kernel_name":"dff_moving_avg",
            "parameters": {"temporal_window": 30 , "exp_tau": 10}},
        "filter": {"order": 3, "kernel_name":"filter_gauss3d",
            "parameters": {"sigma": [3, 3, 3]}},
        "threshold": {"order": 4, "kernel_name":"threshold_std",
            "parameters":{"nstd": 2}}
    },

    "process_config": {
        "method": "Temporal Cross-Correlation",
        "attributes": {
            "function_name":"dff_moving_avg",
            "parameters": {"pattern": "var_name" , "norm": null}
        }
    },

    "metric_config": {
        "method": "Temporal Cross-Correlation",
        "attributes": {
            "function_name":"temporal_cross_corr",
            "pattern_path": "XXX/YYY.tiff",
            "parameters": {"threshold": 10}
        }
    }
}
