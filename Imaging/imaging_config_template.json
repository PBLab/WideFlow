{
    "name": "Imaging/imaging_config_template.json",

    "camera_config": {
        "core_attr": {
            "exp_time": 10,
            "binning": [1, 1],
            "roi": [0, 2048, 0, 2048],
            "clear_mode": 0
        },
        "splice_plugins_enable": false,
        "splice_plugin_setting": [
            {
                "name": "pluginname1",
                "parameters": [
                    {
                        "name": "module_call_order",
                        "value":  1
                    },
                    {
                        "name": "paramname",
                        "value":  1
                    }
                ]
            },
            {
                "name": "pluginname2",
                "parameters": [
                    {
                        "name": "module_call_order",
                        "value":  1
                    },
                    {
                        "name": "paramname",
                        "value":  1
                    }
                ]
            }
                                 ]
    },

    "serial_port_config": {
        "port_id": "/dev/ttyACM0",
        "baudrate": 9800,
        "timeout": 1.0
    },

    "acquisition_config": {
        "enable_gpu" : 1,
        "vid_writer": {"fourcc": "MJPG", "fps": 25, "nrows": 297, "ncols": 337, "frame_var": "d_frame_rs"},
        "vid_save_path": "/home/pb/PycharmProjects/WideFlow/session_results/vid.avi",
        "meta_save_path": "/home/pb/PycharmProjects/WideFlow/session_results/meta.txt",
        "num_of_frames": 100,
        "capacity": 32
    },

    "feedback_config": {
        "pattern_path": "/home/pb/PycharmProjects/WideFlow/test_patterns/pattern_smooth_threshold_297_337_32.tif",
        "metric_threshold": 10
    },

    "rois_data": {
        "file_path": "/home/pb/PycharmProjects/WideFlow/data/cortex_map/allen_2d_cortex_rois_extended.h5"
    },

    "preprocess_pipeline_config": [
        {
            "name": "resize",
            "function": "zoom",
            "args": ["d_frame_rs", "d_frame"],
            "allocate": [
                {"name": "d_frame_rs", "size": [297, 337], "dtype": "float32"},
                {"name": "buffer_rs", "size": [32, 297, 337], "dtype": "float32"}
            ],
            "return": {"buffer_type": "circ_buffer", "to":"buffer_rs"}
        },
        {
            "name": "baseline",
            "function": "baseline_calc_carbox",
            "args": ["buffer_rs"],
            "allocate": [
                {"name": "bs", "size": [297, 337], "dtype": "float32"}
            ],
            "return": {"buffer_type": "buffer", "to":"bs"}
        },
        {
            "name": "dff",
            "function": "dff",
            "args": ["d_frame_rs", "bs"],
            "allocate": [
                {"name": "buffer_dff", "size": [32, 297, 337], "dtype": "float32"}
            ],
            "return": {"buffer_type": "circ_buffer", "to":"buffer_dff"}
        },
        {
            "name": "std",
            "function": "cp.std",
            "args": ["buffer_dff", "0", "cp.float32", "d_std_map"],
            "allocate": [
                {"name": "d_std_map", "size": [297, 337], "dtype": "float32"}
            ],
            "return": {"buffer_type": "None", "to":"None"}
        },
        {
            "name": "threshold",
            "function": "std_threshold",
            "args": ["buffer_dff", "d_std_map", "2"],
            "allocate": [
                {"name": "d_frame_seq_th", "size": [32, 297, 337], "dtype": "float32"},
                {"name": "buffer_th", "size": [32, 297, 337], "dtype": "float32"}
            ],
            "return": {"buffer_type": "buffer", "to":"buffer_th"}
        }
    ],

    "metric_config": {
        "method": "Temporal Cross-Correlation",
        "function": "cross_corr",
        "args": ["buffer_th", "pattern"]
    },

    "visualization_config": {
        "show_live_stream": false,
        "show_rois_trace": false,
        "show_pattern_weight": false
    }
}
